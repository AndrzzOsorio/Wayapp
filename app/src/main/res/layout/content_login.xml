<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.proyecto.integrador.wayapp.LoginActivity"
    tools:showIn="@layout/activity_login">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tfCedulaLogin"
        android:hint="Cedula"
        android:drawableTint="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/textView8"
        android:layout_alignLeft="@+id/tfClavelogin"
        android:layout_alignStart="@+id/tfClavelogin"
        android:layout_alignRight="@+id/tfClavelogin"
        android:layout_alignEnd="@+id/tfClavelogin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/tfClavelogin"
        android:hint="Clave"
        android:drawableTint="@color/colorPrimaryDark"
        android:textAlignment="center"
        android:textStyle="italic"
        android:backgroundTint="@color/colorPrimaryDark"
        android:layout_below="@+id/tfCedulaLogin"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresar"
        android:id="@+id/btnLogin"
        android:layout_below="@+id/cbCredenciales"
        android:layout_alignRight="@+id/tfClavelogin"
        android:layout_alignEnd="@+id/tfClavelogin"
        android:layout_alignLeft="@+id/tfClavelogin"
        android:layout_alignStart="@+id/tfClavelogin" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar credenciales"
        android:id="@+id/cbCredenciales"
        android:checked="false"
        android:drawableTint="@color/colorPrimaryDark"
        android:backgroundTint="@color/colorPrimaryDark"
        android:buttonTint="@color/colorPrimaryDark"
        android:layout_below="@+id/tfClavelogin"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Bienvenido a la plataforma de senso para rancherias Wayapp"
        android:id="@+id/textView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold|italic"
        android:textAlignment="center" />
</RelativeLayout>
