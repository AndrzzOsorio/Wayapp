<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/encuestalayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.proyecto.integrador.wayapp.encuesta">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    <TextView
        android:text="Nombre/Appellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:id="@+id/lblNombre"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/lblNombre"
        android:layout_alignLeft="@+id/lblNombre"
        android:layout_alignStart="@+id/lblNombre"
        android:layout_marginTop="11dp"
        android:id="@+id/encNombre" />

    <TextView
        android:text="Cedula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCedula"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/encNombre"
        android:layout_alignLeft="@+id/encNombre"
        android:layout_alignStart="@+id/encNombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/encCedula"
        android:layout_below="@+id/lblCedula"
        android:layout_alignLeft="@+id/lblCedula"
        android:layout_alignStart="@+id/lblCedula" />

    <TextView
        android:text="Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblEdad"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/encCedula"
        android:layout_alignLeft="@+id/encCedula"
        android:layout_alignStart="@+id/encCedula" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/encEdad"
        android:layout_below="@+id/lblEdad"
        android:layout_alignLeft="@+id/lblEdad"
        android:layout_alignStart="@+id/lblEdad" />

    <TextView
        android:text="Telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblTelefono"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/encEdad"
        android:layout_alignLeft="@+id/encEdad"
        android:layout_alignStart="@+id/encEdad" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/encTelefono"
        android:layout_below="@+id/lblTelefono"
        android:layout_alignLeft="@+id/lblTelefono"
        android:layout_alignStart="@+id/lblTelefono" />

    <TextView
        android:text="Genero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblGenero"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/encTelefono"
        android:layout_alignLeft="@+id/encTelefono"
        android:layout_alignStart="@+id/encTelefono" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/encGenero"
        android:layout_below="@+id/lblGenero"
        android:layout_alignLeft="@+id/lblGenero"
        android:layout_alignStart="@+id/lblGenero" />

    <TextView
        android:text="FunciÃ³n/Cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblCargo"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/encGenero"
        android:layout_alignLeft="@+id/encGenero"
        android:layout_alignStart="@+id/encGenero" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="11dp"
        android:id="@+id/encCargo"
        android:layout_below="@+id/lblCargo"
        android:layout_alignLeft="@+id/lblCargo"
        android:layout_alignStart="@+id/lblCargo" />

    <TextView
        android:text="Descripcion Cargo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lblDescripcion"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textSize="16sp"
        android:textColor="@android:color/holo_blue_light"
        android:layout_below="@+id/encCargo"
        android:layout_alignLeft="@+id/encCargo"
        android:layout_alignStart="@+id/encCargo" />

    <EditText
        android:layout_width="wrap_content"
        android:inputType="textMultiLine"
        android:ems="20"
        android:layout_below="@+id/lblDescripcion"
        android:layout_marginTop="13dp"
        android:id="@+id/encDescripcion"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_alignRight="@+id/encCargo"
        android:layout_alignEnd="@+id/encCargo"
        android:singleLine="false"
        android:selectAllOnFocus="false"
        android:layout_alignLeft="@+id/lblDescripcion"
        android:layout_alignStart="@+id/lblDescripcion"
        android:layout_height="200px" />

    </RelativeLayout>


</ScrollView>
